@model ContatoModel
@{
    ViewData["Title"] = "Confirmar exclusão do contato";
}

<div class="text-center">
    <h3>Deseja excluir o contato (@Model.Nome)?</h3>
</div>

<a class="btn btn-primary" asp-controller="Contato" asp-action="Index" role="button">Cancelar</a>
<a class="btn btn-danger" role="button" asp-controller="Contato" asp-action="Excluir" asp-route-id="@Model.Id">Confirmar</a>